div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-md-6
      h3 Create New Tournament
      form(ng-submit='createTournament()')
        .form-group
          label(for='newTournament') Tournament Name
          input.form-control(type='text', id='newTournament', ng-model='newTournament', required='')
        button.btn.btn-primary(type='submit') Create Tournament
  hr
  .row
    .col-md-12
      h4 My Tournaments
  .row
    .col-md-4(ng-repeat='tournament in myTournaments', ui-sref='tournament({slug:tournament.slug})')
      tournament-callout(tournament='tournament')
